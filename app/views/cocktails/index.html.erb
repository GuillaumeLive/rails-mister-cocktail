<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.40),rgba(0,0,0,0.40)), url('https://images.unsplash.com/photo-1476673160081-cf065607f449?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1504&q=80');">
  <div class="container text-center">
    <h1>Summer Drinks</h1>
    <%= link_to("Add a new cocktail", new_cocktail_path, class:"btn btn-outline-light mt-3") %>
  </div>
</div>
<div class="container pt-4">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-3 pb-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.40),rgba(0,0,0,0.40)), url('https://source.unsplash.com/featured/?<%= cocktail.name%>');">
          <%= link_to(cocktail.name, cocktail, class:".text-dark text-decoration-none") %>
        </div>
      </div>
    <% end %>
  </div>
</div>