<div class="container text-center">
  <h1>Summer Drinks</h1>
  <%= link_to("Add a new cocktail", new_cocktail_path, class:"btn btn-success mt-3") %>
</div>
<div class="container pt-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4 pb-4">
        <div class="card-category" style=".bg-light">
          <%= link_to(cocktail.name, cocktail, class:".text-dark text-decoration-none") %>
        </div>
      </div>
    <% end %>
  </div>
</div>